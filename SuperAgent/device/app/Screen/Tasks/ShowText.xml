      <c:HorizontalLayout CssClass="margin_top" />
    </c:DockLayout>
      <c:HorizontalLine />
      <c:ScrollView Id="grScrollView">
        <c:TextView Text="$param1" CssClass="caption" />
      </c:ScrollView>
  </c:DockLayout>
